<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".SolutionPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/month_year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sultori"
            android:fontFamily="@font/jalnangothic"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈으로"
        android:fontFamily="@font/jalnangothic"
        android:id="@+id/home"
        android:background="@drawable/border_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/myImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/person"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_layout"
            android:text="한 줄 진단"
            android:textAlignment="center"
            android:textColor="#000000"
            android:fontFamily="@font/jalnangothic"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/diagText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/jalnangothic"
            android:background="@drawable/border_layout"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 분석 결과"
            android:padding="5dp"
            android:textSize="20dp" android:fontFamily="@font/jalnangothic"
            android:layout_margin="10dp"
            android:background="@drawable/border_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/border_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="주류"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:fontFamily="@font/jalnangothic"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/alchol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/jalnangothic"
                android:textColor="#000000"
                android:textSize="18dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#A9A9A9"/>

            <com.example.firstandroid.CustomTextOutLineView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:fontFamily="@font/jalnangothic"/>

            <TextView
                android:id="@+id/janORbyung"
                android:fontFamily="@font/jalnangothic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#A9A9A9"/>

            <com.example.firstandroid.CustomTextOutLineView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:fontFamily="@font/jalnangothic" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:fontFamily="@font/jalnangothic"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#A9A9A9"/>
            <com.example.firstandroid.CustomTextOutLineView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:fontFamily="@font/jalnangothic" />

            <TextView
                android:id="@+id/maleORfemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/jalnangothic"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#A9A9A9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>
</LinearLayout>